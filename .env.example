# ReviewGuard Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ===========================================
# REQUIRED - Application will not start without these
# ===========================================

# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Session (must be at least 32 characters, use a random string)
SESSION_SECRET=your-secure-random-session-secret-min-32-chars

# OpenAI (for AI reply generation)
OPENAI_API_KEY=sk-your-openai-api-key

# Admin email (for admin panel access)
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# SMS (Twilio) - Required for SMS features
# ===========================================

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# Billing (Stripe) - Required for paid subscriptions
# ===========================================

STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_STARTER=price_xxxxxxxxxxxxxxxxxxxx
STRIPE_PRICE_ID_PRO=price_xxxxxxxxxxxxxxxxxxxx

# ===========================================
# Email (Resend) - Required for transactional emails
# ===========================================

RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx
RESEND_FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# Image Storage (Cloudinary) - Required for photo uploads
# ===========================================

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ===========================================
# Optional Services
# ===========================================

# Redis (for distributed rate limiting, optional)
REDIS_URL=redis://localhost:6379

# n8n Webhooks (for campaign automation)
N8N_CAMPAIGN_WEBHOOK_URL=https://your-n8n-instance/webhook/xxx
N8N_WEBHOOK_SECRET=your-n8n-secret
N8N_POST_REPLY_WEBHOOK=https://your-n8n-instance/webhook/xxx

# RepairDesk Integration
REPAIRDESK_API_KEY=your-repairdesk-api-key

# Admin Basic Auth (for protected admin routes)
ADMIN_USER=admin
ADMIN_PASS=your-secure-admin-password

# ===========================================
# Application Settings
# ===========================================

# Base URL (auto-detected on Replit, set manually for custom domains)
BASE_URL=https://yourdomain.com

# Environment (development or production)
NODE_ENV=production

# Port (default 5000)
PORT=5000
